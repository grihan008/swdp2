<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Admin</title>
	<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
</head>
<body>
	<main>

	</main>
	<form id="addcategory" method="post" action="https://sheltered-savannah-33614.herokuapp.com/add_category">
		Name: <input type="text" name="name" required="">
		<input type="submit">
	</form>	
<script>
	$.ajax("https://sheltered-savannah-33614.herokuapp.com/categories")
	.done(function(result){
		result.forEach(function (item,i) {
			var catblock = '<div class="catblock">'+
			'<h3>'+item.name+'</h3>'+
					'<img src='+item.image_url+'>'+
					'<form class="updphotoform" method="POST" action="https://sheltered-savannah-33614.herokuapp.com/upload_category" enctype="multipart/form-data"><input type="file" name="image"><input type="hidden" name="id" value="'+item.id+'"><input type="hidden" name="catid" value="'+item.id+'">'+
					'<button type="submit" class="updphoto">Update photo</button></form>'+
			'<a href="https://sheltered-savannah-33614.herokuapp.com/adminskills/'+item.id+'">View</a>'+
			'<button class="delcategory" data-link="https://sheltered-savannah-33614.herokuapp.com/del_category" data-id="'+item.id+'">Delete</button>'+
			'</div>';
			$("main").append(catblock);
			$(".delcategory").click(function(){
				$.post($(this).attr("data-link"), {id: $(this).attr("data-id")});
				location.reload();
			});				
		});
	});
	$("#addcategory").submit(function(e){
		e.preventDefault();
		var formData={};
		$(this).find("input[name]").each(function(index,node){
			formData[node.name] = node.value;
		});
		$.post($(this).attr("action"), formData).done(function () {
        	
   		});
   		location.reload();
	});
</script>
</body>
</html>